{% extends "SCTiengenWebSiteBundle:Blocks:row.html.twig" %}

{% block row_inner %}
{% set active = random(block.children|length - 1) %}
{% set id = 'slideshow-' ~ block.name %}
<div id="{{ id }}" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner" role="listbox">
    {% for childBlock in block.children %}
      <div class="item{%if loop.index0 == active %} active{%endif%}">
        <img src="{{ cmf_media_display_url(childBlock.image) }}" alt="{{ childBlock.label }}" class="fill-block"/>
        {%if not(childBlock.caption is empty) %}
          <div class="carousel-caption">
            {{ childBlock.caption|markdown }}
          </div>
        {% endif %}
      </div>
    {% endfor %}
    <a class="left carousel-control" href="#{{ id }}" role="button" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
      <span class="sr-only">Zur√ºck</span>
    </a>
    <a class="right carousel-control" href="#{{ id }}" role="button" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
      <span class="sr-only">Weiter</span>
    </a>
  </div>
</div>
{% endblock %}
