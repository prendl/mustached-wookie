{% if not(messages is empty) %}
<div class="row">
  <div class="col-xs-12 col-sm-10 col-sm-offset-1">
    <h2><a href="{{ path('news_list') }}">Aktuelles</a></h2>
    <ol>
      {% for message in messages %}
      <li>
        <h3>
          <a href="{{ path('news_detail', {'id': message.id}) }}">{{ message.title }}</a>
        </h3>
        <p>{{ message.summary }}</p>
      </li>
      {% endfor %}
    </ol>
  </div>
</div>
{% endif %}
